#include <QtCore/QObject>
#include <QtWidgets/QSpinBox>
#include <QtWidgets/QPushButton>

class Test : public QSpinBox {
    Q_OBJECT
public:
    Test();
private:
    QPushButton button;
};

Test::Test() {
    //this is calling the static method QObject::connect()
    connect(this, SIGNAL(valueChanged(int)), &button, SLOT(toggle()));
    //same thing, but use a connection type
    connect(this, SIGNAL(valueChanged(int)), &button, SLOT(toggle()), Qt::QueuedConnection);
    //here we are using the inline member version
    connect(this, SIGNAL(valueChanged(int)), SLOT(setValue(int)));
    //same thing, but use a connection type
    connect(this, SIGNAL(valueChanged(int)), SLOT(setValue(int)), Qt::QueuedConnection);
}
